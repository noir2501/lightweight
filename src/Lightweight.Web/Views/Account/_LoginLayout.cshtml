<!DOCTYPE html>
<html lang="en">
<head>
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <meta charset="utf-8" />
    <title>@ViewBag.Title - Lightweight</title>
    <link rel="icon" type="image/x-icon" href="~/favicon.ico" />
    <meta name="description" content="User login page" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0" />

    <!-- bootstrap & fontawesome -->
    <link rel="stylesheet" href="~/content/bootstrap.min.css" />
    <link rel="stylesheet" href="~/content/font-awesome.min.css" />

    <!-- text fonts -->
    <link rel="stylesheet" href="~/content/ace-fonts.css" />

    <!-- ace styles -->
    <link rel="stylesheet" href="~/content/ace.min.css" />

    <!--[if lte IE 9]>
        <link rel="stylesheet" href="~/content/ace-part2.min.css" />
    <![endif]-->
    <link rel="stylesheet" href="~/content/ace-rtl.min.css" />

    <!--[if lte IE 9]>
      <link rel="stylesheet" href="~/content/ace-ie.min.css" />
    <![endif]-->
    <link rel="stylesheet" href="~/content/ace.onpage-help.css" />

    <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
    <script src="~/scripts/html5shiv.js"></script>
    <script src="~/scripts/respond.min.js"></script>
    <![endif]-->
  
</head>

<body class="login-layout">
    <div class="main-container">
        <div class="main-content">
           
            <div class="row">
                <div class="col-sm-10 col-sm-offset-1">
                    <div class="login-container">
                        <div class="center">
                            <h1>
                                <i class="ace-icon fa fa-paper-plane-o blue"></i>
                                <span class="white" id="id-text2">Lightweight</span>
                            </h1>
                            <h4 class="blue" id="id-company-text">&copy; Evoshell</h4>
                        </div>

                        <div class="space-6"></div>

                        <div class="position-relative">
                            @RenderBody()
                        </div><!-- /.position-relative -->

                 
                    </div>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.main-content -->
    </div><!-- /.main-container -->
    <!-- basic scripts -->
    
    <!--[if IE]>
    <script type="text/javascript">
      <script src="~/Scripts/jquery-2.1.1.min.js"></script>
    </script>
    <![endif]-->

    <script type="text/javascript">
        if ('ontouchstart' in document.documentElement) document.write("<script src='../../jquery.mobile.custom.min.js'>" + "<" + "/script>");
    </script>

    <!-- validation scripts -->
    <script src="~/scripts/jquery-2.1.1.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

    @RenderSection("scripts", required: false)
</body>
</html>